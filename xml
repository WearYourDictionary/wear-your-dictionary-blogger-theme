<script type='text/javascript'>
//<![CDATA[
function fetchRandomPost() {
    const feedUrl = "/feeds/posts/default?alt=json-in-script&max-results=100";  // Fetch up to 100 posts

    $.ajax({
        url: feedUrl,
        dataType: "jsonp",
        success: function(data) {
            const posts = data.feed.entry;  // Get the list of posts

            if (posts && posts.length > 0) {
                const randomIndex = Math.floor(Math.random() * posts.length);  // Pick a random post
                const randomPost = posts[randomIndex];

                // Extract title, link, and content
                const postTitle = randomPost.title.$t;

                // Extract the post URL
                const postUrl = randomPost.link.find(link => link.rel === 'alternate').href;
                console.log("Random Post URL:", postUrl);  // Debug URL to ensure it's correct

                const postContent = randomPost.content ? randomPost.content.$t : (randomPost.summary ? randomPost.summary.$t : "No content available");

                // Ensure .random-post container exists
                const randomPostContainer = document.querySelector('.random-post');
                if (randomPostContainer) {
                    // Display the random post on the homepage
                    randomPostContainer.innerHTML = `
                        <h2><a href="${postUrl}" target="_blank" rel="noopener noreferrer">${postTitle}</a></h2>
                        <div>${postContent}</div>
                    `;
                }
            } else {
                document.querySelector('.random-post').innerHTML = "<p>No posts available.</p>";
            }
        },
        error: function(jqXHR, textStatus, errorThrown) {
            console.error("Error fetching posts:", textStatus, errorThrown);
            document.querySelector('.random-post').innerHTML = "<p>Error fetching posts.</p>";
        }
    });
}

// Fetch a random post if the page is the homepage
window.addEventListener('DOMContentLoaded', function() {
    if (window.location.pathname === '/' || window.location.pathname.endsWith('/index.html')) {
        fetchRandomPost();
    }
});
//]]>
</script>

